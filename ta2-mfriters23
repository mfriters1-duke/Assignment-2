#2

USE TIPS;

SELECT MAX total_bill, MIN total_bill
FROM TIPS
ORDER BY total_bill DESC;

#3

USE TIPS;

SELECT size, Count(size), GROUP BY parties
FROM TIPS
ORDER BY total_bill DESC;

#4

USE TIPS;

SELECT MAX total_bill, tip
FROM TIPS
WHERE size>=4 and ((tip/total_price)) > .15
ORDER BY total_bill DESC;

#5

USE TIPS;

SELECT total_bill, tip, (tip/total_bill)
FROM TIPS
WHERE size>=4 and ((tip/total_price)) > .15
ORDER BY total_bill DESC;
